---
import Layout from '../../layouts/Layout.astro';
import LineBackground from '../../components/line-background.astro'
---

<Layout>

    <main class="mx-3 grow md:mx-8 lg:mx-12 grid-border-color border-r border-l border-border dark:border-border">

        <section class="relative overflow-x-clip bg-linear-to-t from-orange-100/30 dark:from-orange-900/20 px-4 py-12 sm:px-6 lg:pt-40 lg:pb-[5.7rem]">

            <!-- Coins d√©coratifs -->
            <div class="absolute z-10 size-2 rotate-45 rounded-[1px] border border-primary dark:border-orange-300/25 bg-background dark:bg-black bottom-[-4.5px] left-[-4.5px]"></div>
            <div class="absolute z-10 size-2 rotate-45 rounded-[1px] border border-primary dark:border-orange-300/25 bg-background dark:bg-black right-[-4.5px] bottom-[-4.5px]"></div>

            <LineBackground />
            <div class="mx-auto w-full max-w-(--breakpoint-sm) md:max-w-[1100px] relative isolate grid grid-cols-1 justify-center lg:grid-cols-2 gap-4 lg:gap-32">
                <div class="mx-auto flex flex-col gap-7 lg:m-0">
                    <hgroup class="flex flex-col items-center lg:items-start">
                        <h1 class="font-lora text-pretty scroll-mt-24 h0 max-w-4/5 text-orange-400 dark:text-orange-300 font-normal my-2 text-center lg:text-left">
                            Trident ‚Äì Secure Authentication & Policy
                        </h1>
                        <p class="tracking-tight max-w-[360px] text-center text-balance lg:text-left text-foreground dark:text-gray-200">
                            <span>
                                <span data-br=":R15c6fnknq6ja:" data-brr="1" style="display:inline-block;vertical-align:top;text-decoration:inherit;text-wrap:balance">
                                    Centralizes MFA and adaptive authentication.
                                    Enforce strong, flexible access policies for all your users.
                                </span>
                            </span>
                        </p>
                    </hgroup>

                    <!-- Section de fonctionnalit√©s pour mobile -->
                    <div class="flex flex-col gap-4 lg:hidden">
                        <div class="flex flex-col gap-2 p-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-white/50 dark:bg-gray-800/30">
                            <h3 class="font-semibold text-gray-900 dark:text-gray-100">üîê Multi-Factor Authentication</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Support for TOTP, WebAuthn, and SMS authentication</p>
                        </div>
                        <div class="flex flex-col gap-2 p-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-white/50 dark:bg-gray-800/30">
                            <h3 class="font-semibold text-gray-900 dark:text-gray-100">‚ö° Adaptive Security</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Smart risk assessment and conditional access policies</p>
                        </div>
                        <div class="flex flex-col gap-2 p-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-white/50 dark:bg-gray-800/30">
                            <h3 class="font-semibold text-gray-900 dark:text-gray-100">üõ°Ô∏è Zero Trust</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Never trust, always verify with continuous authentication</p>
                        </div>
                    </div>

                    <!-- Section de badges de statut -->
                    <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
                        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 border border-green-200 dark:border-green-700">
                            <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                            Active Monitoring
                        </div>
                        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 border border-blue-200 dark:border-blue-700">
                            <div class="w-2 h-2 rounded-full bg-blue-500"></div>
                            FIDO2 Ready
                        </div>
                        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 border border-purple-200 dark:border-purple-700">
                            <div class="w-2 h-2 rounded-full bg-purple-500"></div>
                            Enterprise Grade
                        </div>
                    </div>
                </div>


                <div class="relative isolate hidden lg:block" style="opacity: 1; transform: none;">
                    <div class="absolute col-span-full flex-none select-none left-[-100px] lg:left-[-50px] xl:left-[-170px]" style="aspect-ratio:16/9;height:548.5714285714286px;top:-96px">
                        <div class="relative isolate size-full overflow-hidden rounded-t-md rounded-b-md border border-gray-300 dark:border-gray-600 shadow-lg shadow-gray-200 dark:shadow-gray-900/50">


                            <img src="/trident_hero.png" alt="Trident Authentication Interface" class="dark:opacity-90">

                        </div>
                    </div>

            </div>



        </section>
    </main>

</Layout>
